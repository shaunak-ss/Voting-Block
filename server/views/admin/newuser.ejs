    <link href="https://fonts.googleapis.com/css2?family=Arimo&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg " style="background-color: black;">
        <a class="navbar-brand" href="/">
            <img src="images/eci2.png" width="150px" height="30px" loading="lazy" style="background-color: white;" />
          </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/home" style="color:white;"
                        onMouseOver="this.style.color='red'" onMouseOut="this.style.color='white'">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/dashboard" style="color:white;"
                        onMouseOver="this.style.color='red'" onMouseOut="this.style.color='white'">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/updaterequest" style="color:white;"
                        onMouseOver="this.style.color='red'" onMouseOut="this.style.color='white'">Update Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/review-page" style="color:white;"
                        onMouseOver="this.style.color='red'" onMouseOut="this.style.color='white'">Reviews</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logout" style="color:white;"
                        onMouseOver="this.style.color='red'" onMouseOut="this.style.color='white'">Logout</a>
                </li>
    
            </ul>
        </div>
    </nav>
    <div style="background: url('images/backi2.png'); height: 100vh; background-repeat: no-repeat;background-size: cover;">
    <br>
    <h1 style="margin-left: 34%;">Welcome To Add User Page</h1>
    
    <form action="" method="post" enctype="application/x-www-form-urlencoded" style="
    width: 34%;
    height: 59%;
    border: 7px solid black;
    display: inline-block;
    justify-content: center;
    padding: 30px;
    border-radius: 20px;
    margin-left: 32%;
    margin-top: 35px;
    font-size: 20px;">
        <label>Enter Name :</label>
        <input type="text" name="name" placeholder="Enter Name" style="float: right;">
        <br><br>
        <label>Enter Email :</label>
        <input type="email" name="email" placeholder="Enter Email" style="float: right;">
        <br><br>
        <label>Enter Mobile :</label>
        <input type="text" name="mno" placeholder="Enter mobile" style="float: right;">
        <br><br>
        <label>Enter Aadhar Number :</label>
        <input type="text" name="adhar" placeholder="Enter Aadhar Number" style="float: right;">
        <br><br>
        <label>Enter Password :</label>
        <input type="password" name="password" placeholder="Enter Password" style="float: right;">
        <br><br>
        <input style="margin-left: 34%;
        margin-top: 2%;
        background-color: black;
        color: white;
        border-radius: 10px;
        width: 29%;
        height: 12%;
        font-size: 19px;
        padding: 0%;" type="submit" value="Add User" onMouseOver="this.style.color='red'" onMouseOut="this.style.color='white'" >
    </form>
    <%
        if(typeof message !== 'undefined'){
            %>
                <p style="color: green;
                margin-left: 545px;
                font-size: 30px;"><%= message %></p>
            <%    
        }
    %>
    </div>
</body>
</html>